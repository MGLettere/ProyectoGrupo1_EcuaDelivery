@model IEnumerable<EcuaDeliveryV3.PRODUCTO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            NOMBRE
        </th>
        <th>
            PRECIO
        </th>
        <th>
            DESCRIPCIÓN
        </th>
        <th>
            STOCK
        </th>
        <th>
            FECHA DE INICIO
        </th>
        <th>
            CATEGORIA
        </th>
        <th>
            PROVEEDOR
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PRO_NOM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRO_PRECIO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRO_DESCRIPCION)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRO_STOCK)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRO_FECHA_IN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CATEGORIA.CAT_NOMBRE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PROVEEDOR.PRV_NOMBRE)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PRO_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PRO_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PRO_ID })
        </td>
    </tr>
}

</table>
